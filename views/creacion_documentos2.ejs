<%- include('partials/header') %>

<div class="flex flex-col text-blue">
  <%- include('partials/menu') %> <%- include('partials/nav') %>
  <main class="relative mt-20 ml-0 md:mt-16 md:ml-36 lg:ml-72">
    <div class="min-h-screen p-6 ">
      <div class="caja">
        <div class="flex flex-col mb-6">
            <form class="w-full p-8 mx-auto" action="/creacion_documentos" method="get">
                <div class="grid grid-cols-1 gap-6 md:grid-cols-4">
                    <!-- Título del documento -->
                    <div class="col-span-2">
                        <label for="titulo" class="label">Título del documento</label>
                        <input type="text" id="titulo" name="titulo" placeholder="Escriba el nombre del nuevo documento" class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-[#F6A229]">
                    </div>
        
                    <!-- Ámbito -->
                    <div>
                        <label for="ambito" class="label">Ámbito</label>
                        <select id="ambito" name="ambito" class="custom-select w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-[#F6A229] appearance-none bg-white">
                            <option disabled selected>Seleccione un ámbito</option>
                            <!-- Agregar opciones aquí -->
                        </select>
                    </div>
        
                    <!-- Tipo de documento -->
                    <div>
                        <label for="tipo" class="label">Tipo de documento</label>
                        <select id="tipo" name="tipo" class="custom-select w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-[#F6A229] appearance-none bg-white">
                            <option disabled selected>Seleccione</option>
                            <!-- Agregar opciones aquí -->
                        </select>
                    </div>
        
                    <!-- Periodicidad -->
                    <div>
                        <label for="periodicidad" class="label">Periodicidad</label>
                        <select id="periodicidad" name="periodicidad" class="custom-select w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-[#F6A229] appearance-none bg-white">
                            <option disabled selected>Seleccione la periodicidad</option>
                            <!-- Agregar opciones aquí -->
                        </select>
                    </div>
        
                    <!-- Plazo adicional -->
                    <div>
                        <label for="plazo" class="label">Plazo adicional</label>
                        <input type="text" id="plazo" name="plazo" placeholder="Escriba los días adicionales" class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-[#F6A229]">
                    </div>
                </div>
        
                <!-- Botones -->
                <div class="flex justify-start mt-8 space-x-4">
                    <button type="submit" class="buttonmd">
                        GUARDAR DOCUMENTO
                    </button>
                    <button type="button" class="button-tertiarymd ">
                        CANCELAR
                    </button>
                </div>
            </form>
        </div>

        
      </div>
      <!-- fin caja-->
    </div>
  </main>
</div>

<%- include('partials/footer') %>
